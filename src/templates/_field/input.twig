{% import "_includes/forms" as forms %}

<div class="SiteSyncField matrixblock {{ value.enabled ? 'is-enabled' }}" id="{{ id }}">
  <div class="SiteSyncField-header titlebar">
    <div class="SiteSyncField-toggleField">
      {{ forms.lightswitch({
          name: name ~ '[enabled]',
          labelId: toggleLabelId ?? null,
          on: value.enabled,
      }) }}
      <label id="{{ toggleLabelId ?? null }}">
        Enabled
      </label>
    </div>
  </div>
  <div class="SiteSyncField-panel {{ not value.enabled ? 'disabled' }}">
    {{ forms.checkboxSelectField({
        label: 'Sources',
        allLabel: 'All Content',
        showAllOption: true,
        name: name ~ '[sources]',
        values: value.sources,
        options: {
          'title': 'Title',
          'slug': 'Slug',
          'fields': 'Fields',
        },
      })
    }}

    {{ forms.lightswitchField({
        label: 'Overwrite',
        name: name ~ '[overwrite]',
        on: value.overwrite,
        instructions: 'Replace content in other sites, even if it doesn\'t match.',
    }) }}

    {# {% if value.element %}
      <div class="field centeralign">
        <p class="warning">Values for this field will not persist between saves.</p>
      </div>
    {% endif %} #}
  </div>
</div>
